{
  "name": "Ruminate App",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:md": "npx hc compile parser --O0 --t ts --asytrip --o ./src/ts/editor/parser/ ../grammar/md.hcg",
    "inspect:md": "npx hc tools disassemble --browse ../grammar/md.hcg",
    "dev:app": "RUST_BACKTRACE=1 cargo tauri dev",
    "dev:fe": "candle.wick workspace --port 51221 ./src/",
    "build": "npm run build:release",
    "build:release": "cargo tauri build",
    "build:debug": "cargo tauri dev",
    "test:fe": "candle.wick test ./src/tests/"
  },
  "dependencies": {
    "@candlelib/glow": "^0.5.10",
    "@candlelib/spark": "^0.3.10",
    "@candlelib/wick": "^0.18.9",
    "@hctoolkit/runtime": "^0.0.6",
    "@tauri-apps/api": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.0.0-beta.10"
  }
}