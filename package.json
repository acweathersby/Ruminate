{
  "name": "ruminate",
  "type": "module",
  "version": "0.1.1",
  "description": "Simple Notes",
  "main": "source/ruminate.js",
  "repository": "https://github.com/acweathersby/ruminate",
  "author": "Anthony C Weathersby",
  "license": "MIT",
  "private": false,
  "bin": {
    "graze": "./source/graze/graze.js"
  },
  "scripts": {
    "start": "electron -r esm ./apps/electron/main.js",
    "test": "mocha -r esm test/test.js",
    "compile.junction": "hydrocarbon compile -u --name query_parser -o ./source/compiler/ -t mjs.js ./source/grammar/junction.hcg",
    "compile.junction.test": "hydrocarbon compile -d -u -m ./source/grammar/junction.hcg",
    "compile.query": "hydrocarbon compile -u --name query_parser -o ./source/compiler/ -t mjs.js ./source/grammar/gnql.hcg",
    "compile.query.cpp": "hydrocarbon compile -u --name query_parser --cpp -o ./source/cpp/compiler/ -t cpp ./source/grammar/command_string.cpp.hcg",
    "compile.query.test": "hydrocarbon compile -d -u -m ./source/grammar/command_string.cpp.hcg",
    "test.watch": "mocha -r esm -w test/test.js",
    "build": "rollup --config ./build/config/config.js",
    "build.watch": "rollup --config ./build/config/config.js --watch",
    "build_test_data": "node ./test/data/data_builder.js",
    "build_wasm": "./scripts/debian/build_wasm.sh"
  },
  "dependencies": {
    "@candlefw/charcoal": "latest",
    "@candlefw/glow": "latest",
    "@candlefw/html": "candlefw/html",
    "@candlefw/lantern": "latest",
    "@candlefw/observer": "^1.0.1-0",
    "@candlefw/radiate": "latest",
    "@candlefw/whind": "latest",
    "@candlefw/wick": "latest",
    "codemirror": "^5.48.2",
    "commander": "^3.0.0",
    "diff": "^4.0.1",
    "electron": "^6.0.0",
    "jsdiff": "^1.1.1",
    "terser": "^4.2.0"
  },
  "devDependencies": {
    "@candlefw/hydrocarbon": "latest",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "mocha": "latest",
    "rollup": "^1.18.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  }
}
