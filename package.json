{
  "name": "graze",
  "version": "0.0.1",
  "description": "Simple Notes",
  "main": "source/graze.js",
  "repository": "https://github.com/acweathersby/graze",
  "author": "Anthony C Weathersby",
  "license": "MIT",
  "private": false,
  "bin": {
  	"graze.note":"electron ./apps/electron/main.js"
  },
  "scripts": {
  	"start": "electron ./apps/electron/main.js",
    "test": "mocha -r esm test/test.js",
    "compile.reducer": "hydrocarbon compile -u --name query_parser -o ./source/compiler/ -t mjs.js ./source/grammar/reduce_tree.hcg",
    "compile.reducer.test": "hydrocarbon compile -u -m ./source/grammar/reduce_tree.hcg",
    "compile.query": "hydrocarbon compile -u --name query_parser -o ./source/compiler/ -t mjs.js ./source/grammar/gnql.hcg",
    "compile.query.test": "hydrocarbon compile -u -m ./source/grammar/gnql.hcg",
    "test.watch": "mocha -r esm -w test/test.js"
  },
  "dependencies": {
    "@candlefw/glow": "latest",
    "@candlefw/lantern": "latest",
    "@candlefw/radiate": "latest",
    "@candlefw/whind": "latest",
    "@candlefw/wick": "latest",
    "electron": "^6.0.0"
  },
  "devDependencies": {
    "@candlefw/hydrocarbon": "latest",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "mango": "^0.0.4"
  }
}
